---
import Layout from "../layouts/Layout.astro";
import Header from "../layouts/Header.astro";
import Experience from "../layouts/Experience.astro";
import Technologies from "../layouts/Technologies.astro";
import Education from "../layouts/Education.astro";
import About from "../layouts/About.astro";
import Contact from "../layouts/Contact.astro";
---

<Layout
  title="Gabriel Romero - Desarrollador Front-end"
  metaDescription="Blog sobre Desarrollo web"
  path={"home"}
>
  <main
    class="max-w-[1100px] px-3 md-px-0 mx-auto flex flex-col gap-y-3 md:gap-y-12 mb-12"
  >
    <Header />
    <Experience />
    <Technologies />
    <Education />
    <About />
    <Contact />
  </main>
  <button
    id="scrollUpBtn"
    class="fixed bottom-5 right-5 hidden border border-[#4c4c4c] rounded text-lime p-2 transition duration-300"
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-bar-up"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M12 4l0 10"></path><path d="M12 4l4 4"></path><path d="M12 4l-4 4"
      ></path><path d="M4 20l16 0"></path></svg
    ></button
  >
</Layout>

<script>
  const buttonToTop = document.getElementById("scrollUpBtn");

  buttonToTop.addEventListener("click", () => {
    scrollToTop();
  });
  window.onscroll = function () {
    var scrollUpBtn = document.getElementById("scrollUpBtn");
    if (
      document.body.scrollTop > 100 ||
      document.documentElement.scrollTop > 100
    ) {
      scrollUpBtn.classList.remove("hidden");
    } else {
      scrollUpBtn.classList.add("hidden");
    }
  };

  function scrollToTop() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
  }
</script>
