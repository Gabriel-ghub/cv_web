---
const { name = "Sin nombre", id } = Astro.props;
---

<section
  id={`${id}`}
  class="flex flex-col w-full gap-9 bg-lgray-300 p-2 md:p-6 rounded-lg overflow-hidden"
>
  <div class="flex justify-center">
    <h2
      class="text-lime text-2xl md:text-5xl font-bold text-center py-2 inline-block"
    >
      {name}
    </h2>
  </div>

  <slot />
</section>
