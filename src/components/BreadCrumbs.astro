---
const { links } = Astro.props;
---

{
  (
    <div class="flex gap-1 items-center flex-wrap">
      <div class="flex-shrink-0">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#c0f25b"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-home"
        >
          <>
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M5 12l-2 0l9 -9l9 9l-2 0" />
            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" />
          </>
        </svg>
      </div>

      {links.map((link, index) => {
        if (link.current === true) {
          return <span class="text-lime text-sm">{link.page}</span>;
        }
        return (
          <>
            <a
              class="text-lime underline text-sm"
              href={`${link.indent && index > 0 ? links[index - 1].url : ""}${link.url}`}
            >
              {link.page}
            </a>
            <span class="text-lime text-sm">
              {links.length === index - 1 || links.length === 1 ? "" : " > "}
            </span>
          </>
        );
      })}
    </div>
  )
}
