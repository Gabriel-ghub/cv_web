---
import IconSVG from "../components/IconSVG.astro";
import { navItems } from "../data/data";
const { path } = Astro.props;
const navLinks = navItems.map((link) => {
  if (link.href === path) {
    return { ...link, current: true };
  }
  return link;
});
---

<nav class="hidden rounded bg-[#2b2b31] sticky top-0 md:block shadow-lg z-10">
  <div class="max-w-[1100px] mx-auto md:flex justify-end gap-5">
    {
      navLinks.map((item) => {
        return (
          <a
            href={item.href}
            target={item.newTab ? "_blank" : "_self"}
            class={`text-lg font-semibold p-2 py-4 text-lime border-b border-b-transparent hover:border-lime ${item.current && "border-b border-b-lime"} transition-all flex items-center`}
          >
            {item.text}
            {item.icon && (
              <div class="flex-shrink-0">
                <IconSVG iconData={[{ name: "pdf", size: "20" }]} />
              </div>
            )}
          </a>
        );
      })
    }
  </div>
</nav>

