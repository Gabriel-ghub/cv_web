---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="./gabrielromero_logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --lime: #c0f25b;
    --blue: #ac86dd;
    --accent-gradient: linear-gradient(
      90deg,
      var(--lime) 0%,
      var(--blue) 35%,
      var(--blue) 100%
    );
  }

  @font-face {
    font-family: "Geist";
    src:
      local("Geist-Regular"),
      url("/fonts/geist/Geist-Regular.woff") format("woff");
  }
  html {
    background-color: rgb(23, 23, 28);
    font-family: "Inter", sans-serif;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }

  h1 {
    /* font-family: Geist;
    font-weight: 700; */
  }

  p,
  h1,
  h2,
  h3 {
    color: white;
  }
</style>
