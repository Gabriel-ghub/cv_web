---
import Image from "astro/components/Image.astro";
import gabriel from "../images/gabriel.jpg";
---

<header
  class="flex flex-col md:flex-row w-full gap-5 justify-between"
  id="index"
>
  <div class="bg-lgray-300 p-2 md:p-6 rounded-lg w-full">
    <div class="pb-2">
      <p
        class="text-gradient text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-center kalam"
      >
        Gabriel Romero
      </p>
    </div>
    <h1 class="text-gradient text-3xl md:text-5xl font-bold text-center kalam">
      Desarrollador web
    </h1>
    <h2 class="text-gradient text-3xl md:text-5xl font-bold text-center kalam">
      Front-end
    </h2>
  </div>
  <div
    class="bg-lgray-300 md:w-[275px] p-2 md:p-6 rounded-lg flex justify-center items-center"
  >
    <Image
      src={gabriel}
      height={gabriel.height}
      width={gabriel.width}
      alt="Foto de Gabriel Romero, programador web, sonriendo"
      class="object-cover rounded-full max-w-52"
    />
    <!-- <img
      src="./gabriel.jpg"
      alt="Foto de Gabriel Romero, programador web, sonriendo"
      class="h-48 w-48 object-cover rounded-full"
    /> -->
  </div>
</header>
